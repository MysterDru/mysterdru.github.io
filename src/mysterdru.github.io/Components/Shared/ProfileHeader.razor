<div class="head">
    <div class="image" style="width:120px;height:120px;background-image:url(dist/images/profile.png);background-size:cover;border-radius:50%;background-repeat:no-repeat;background-position:center center"></div>
    @if (ShowHome)
    {
        <div class="home">
            <a title="Home" href="/dist" target="_self" class="button xlarge">
                <i class="fa-solid fa-house" style="color:black;"></i>
            </a>
        </div>
    }
    <div class="name-headline">
        <section>
            <h1 class="name">Drew Frisk</h1>
        </section>
        <section>
            <h2 class="headline">
                <span class="roles">
                    <span class="role">Senior Software Developer</span>
                </span>
                <span class="location"> in the <span class="location">Wisconsin NorthWoods</span></span>
            </h2>
        </section>
        @if (!string.IsNullOrEmpty(Title))
        {
            <section>
                <h1 class="page-title">@Title</h1>
            </section>
        }
    </div>
</div>

@code {
    [Parameter] public bool ShowHome { get; set; }

    [Parameter] public string Title { get; set; }
}